{{ define "head" }}
    <title>Photos | andreimuntean</title>
    <link rel="stylesheet" type="text/css" href="assets/css/photos.css" />
{{ end }}

{{ define "content" }}
    <section id="photos">
        <h1>Photos</h1>
        <div>
            {{ range .Photos }}
                <a href="/storage/{{ .ID }}">
                    <div class="photo-box">
                        <div class="photo-box-top-half">
                            <img class="photo-box-thumbnail" src="/thumbnail/{{ .ID }}">
                        </div>
                        <div class="photo-box-bottom-half">
                            <div class="photo-box-field">
                                {{ .Name }}
                            </div>
                            <div class="photo-box-field">
                                {{ .Date }}
                            </div>
                        </div>
                    </div>
                </a>
            {{ end }}
        </div>
    </section>
{{ end }}